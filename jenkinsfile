pipeline{
    agent any
    tools {
        maven 'maven'
    }
    stages{
        stage(" claen the work space"){
            steps{

                        sh 'cleanWs()'
                }
        }
        
        stage(" git checkou"){
            steps{

                    git branch: "test", url: "https://github.com/chumaedeogu/hibernate5.git"
                }
        }
        stage("maven unit testing"){
            steps{
                sh ' mvn clean test'
            }
        }

        stages(" run the depenncy check"){
            steps{
                dependencyCheck additionalArguments: '''--output "tartget/"
                   g--scan "target/"
                  -f "ALL"''', odcInstallation: 'owasp'
            }
        }

    }
}